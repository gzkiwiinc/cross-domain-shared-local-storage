{
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "strict": false,
    "strictNullChecks": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es2015", "es2016", "es2017", "es2018", "dom" ],
    "paths": {},
    "outDir": "lib/types",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
